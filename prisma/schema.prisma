generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE")
}

model Column {
  id        String   @id @default(cuid())
  title     String   @default("New Column")
  color     String   @default("#CCCCCC")
  createdAt DateTime @default(now())
  tasks     Task[]   @relation("ColumnTasks")
}

model Task {
  id        String   @id @default(cuid())
  color     String   @default("#CCCCCC")
  content   String   @default("New Task")
  createdAt DateTime @default(now())
  tags      String[]
  position  Int
  columnId  String
  column    Column   @relation("ColumnTasks", fields: [columnId], references: [id])
  userId    String?
  user      User?    @relation("UserTasks", fields: [userId], references: [id])

  @@index([columnId, position])
}

model User {
  id        String   @id @default(cuid())
  login     String   @unique
  color     String   @default("#CCCCCC")
  createdAt DateTime @default(now())
  tags      String[]
  nickname  String   @default("Anonymous")
  password  String
  avatarUrl String   @default("avatars/unset_avatar.jpg")

  tasks Task[] @relation("UserTasks")
}
